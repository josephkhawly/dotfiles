#!/bin/bash
source `which virtualenvwrapper.sh`

# set up virtualenv and install requirements
mkvirtualenv --system-site-packages ${PWD##*/}
pip install -r requirements.txt

cp ~/Developer/${HOSTNAME}.py /main/settings # copy machine files
touch main/settings/PASSWORDS.py # create PASSWORDS

# make db and user
createdb ${PWD##*/}
createuser -s ${PWD##*/}

